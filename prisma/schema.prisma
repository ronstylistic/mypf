generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}
enum Role {
  DOCTOR
  SECRETARY
}

enum Subscription {
  FREE
  PRO
}

model User {
  id            String   @id @default(cuid())
  email         String   @unique
  passwordHash  String
  name          String?
  role          Role
  doctorId      String?
  subscription  Subscription @default(FREE)

  doctor        User?    @relation("DoctorSecretary", fields: [doctorId], references: [id])
  secretaries   User[]   @relation("DoctorSecretary")

  patients      Patient[]
  admissions    Admission[]
  payments      Payment[]

  createdAt     DateTime @default(now())
}

model Patient {
  id        String   @id @default(cuid())
  firstName String
  lastName  String
  birthDate DateTime?
  doctorId  String

  doctor    User     @relation(fields: [doctorId], references: [id])
  admissions Admission[]

  createdAt DateTime @default(now())
}


model Admission {
  id              String   @id @default(cuid())
  patientId       String
  doctorId        String
  hospital        String
  diagnosis       String
  dateAdmitted    DateTime
  dateDischarge   DateTime?
  professionalFee Float

  patient         Patient @relation(fields: [patientId], references: [id])
  doctor          User    @relation(fields: [doctorId], references: [id])
  payments        Payment[]

  createdAt       DateTime @default(now())
}

model Payment {
  id           String   @id @default(cuid())
  admissionId  String
  doctorId     String
  amount       Float
  datePaid     DateTime

  admission    Admission @relation(fields: [admissionId], references: [id])
  doctor       User      @relation(fields: [doctorId], references: [id])

  createdAt    DateTime @default(now())
}